@model prjMyBlog.ViewModels.CUserProfileViewModel
@{
    ViewData["Title"] = "個人資料管理";
}

<h2 class="mb-4">個人資料管理</h2>

<form asp-action="Profile" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="FUserId" />

    <div class="mb-3">
        <label class="form-label">暱稱</label>
        <input asp-for="FUsername" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">個人簡介</label>
        <textarea asp-for="FBio" class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">大頭貼上傳</label>
        <input type="file" asp-for="PhotoFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ExistingPhotoPath))
        {
            <div class="mt-2">
                <img src="~/images/@Model.ExistingPhotoPath" width="150" class="rounded" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">儲存變更</button>
</form>
