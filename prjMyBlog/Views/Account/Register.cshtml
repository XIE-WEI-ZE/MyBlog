@model prjMyBlog.ViewModels.CRegisterViewModel
@{
    ViewData["Title"] = "會員註冊";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="text-center mb-4">會員註冊</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Message</div>
        }

        <form asp-action="Register" method="post">
            <div class="form-outline mb-3">
                <label class="form-label">帳號</label>
                <input asp-for="txtAccount" class="form-control" />
            </div>

            <div class="form-outline mb-3">
                <label class="form-label">Email</label>
                <input asp-for="txtEmail" class="form-control" type="email" />
            </div>

            <div class="form-outline mb-3">
                <label class="form-label">密碼</label>
                <input asp-for="txtPassword" class="form-control" type="password" />
            </div>

            <div class="form-outline mb-4">
                <label class="form-label">確認密碼</label>
                <input asp-for="txtConfirmPassword" class="form-control" type="password" />
            </div>

            <button type="submit" class="btn btn-success w-100">註冊</button>
        </form>
    </div>
</div>
