@model IEnumerable<prjMyBlog.ViewModels.CBlogPostPreviewViewModel>

@{
    ViewData["Title"] = "文章首頁";
}

@section Styles {
    <style>
        .preview-img {
            height: 200px;
            object-fit: cover;
        }

        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card:hover {
            box-shadow: 5px 5px 5px rgba(0,0,0,0.2);
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .btn-readmore {
            margin-top: auto;
            align-self: flex-start;
        }
    </style>
}

<h2 class="mb-4">文章列表</h2>
<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group rounded">
        <input type="search"
               name="txtKeyword"
               class="form-control rounded"
               placeholder="搜尋文章標題或內容"
               aria-label="Search"
               aria-describedby="search-addon"
               value="@ViewBag.txtKeyword" />
        <button type="submit" class="input-group-text border-0 bg-light" id="search-addon">
            <i class="fas fa-search"></i>
        </button>

    </div>
</form>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(item.PreviewImagePath))
                {
                    <img src="~/images/@item.PreviewImagePath" class="card-img-top preview-img" />
                }
                else
                {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center preview-img">
                        無預覽圖
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title">@item.Post.FTitle</h5>
                    <p class="card-text text-muted">
                        @item.CategoryName<br />
                        作者：@item.AuthorName<br />
                        建立時間：@item.Post.FCreatedAt?.ToString("yyyy-MM-dd HH:mm")
                    </p>

                    <a class="btn btn-sm btn-primary" asp-controller="BlogPost" asp-action="Details" asp-route-id="@item.Post.FPostId">閱讀更多</a>

                </div>
            </div>
        </div>
    }
</div>
@if ((int)ViewBag.TotalPages > 1)
{
    <nav class="mt-4" aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-txtKeyword="@ViewBag.txtKeyword">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
